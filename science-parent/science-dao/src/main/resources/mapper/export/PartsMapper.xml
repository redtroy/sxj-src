<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sxj.science.dao.export.IPartsDao">
	<resultMap id="PartsResultMap" type="com.sxj.science.entity.export.PartsEntity">
		<id property="id" column="ID" jdbcType="VARCHAR" />
		<result property="used" column="USED" jdbcType="VARCHAR" />
		<result property="name" column="NAME" jdbcType="VARCHAR" />
		<result property="type" column="TYPE" jdbcType="VARCHAR" />
		<result property="quantity" column="QUANTITY" jdbcType="VARCHAR" />
		<result property="unit" column="UNIT" jdbcType="VARCHAR" />
		<result property="techonlogy" column="TECHONLOGY" jdbcType="VARCHAR" />
		<result property="docId" column="DOC_ID" jdbcType="VARCHAR" />
	</resultMap>
	<delete id="deleteParts" parameterType="String">
		<![CDATA[DELETE FROM S_PARTS WHERE DOC_ID IN]]>
		<foreach item="item" collection="array" open="(" close=")"
			separator=",">
			#{item}
		</foreach>
	</delete>
	<select id="query" resultMap="PartsResultMap"
		parameterType="com.sxj.util.persistent.QueryCondition">
		<![CDATA[SELECT * from S_PARTS d WHERE 1 = 1]]>
		<if test="condition.docId != null and condition.docId != ''">
			<![CDATA[ and d.DOC_ID=#{condition.docId}]]>
		</if>
		<if test="condition.docIds != null">
		  <![CDATA[ and d.DOC_ID IN ]]>
			<foreach item="item" collection="condition.docIds" open="("
				close=")" separator=",">
				#{item}
			</foreach>
		</if>
	</select>
	<!-- 条件查询备案 -->
	<select id="getPartsByDocIds" resultMap="PartsResultMap"
		parameterType="java.util.Map">
		<![CDATA[SELECT * FROM S_PARTS WHERE 1=1  ]]>
		<!-- 	公司名称 -->
		<if test="docIds != null">
			<![CDATA[ AND DOC_ID IN ]]>
			<foreach item="item" collection="docIds" open="(" close=")"
			separator=",">
			#{item}
			</foreach> 
		</if>
	</select>
</mapper>